{
    "_base": ["./config/uper/models/uper.json",
              "./config/uper/models/uper_convnext_siamese.json"],
    "log_level": "INFO",
    "network_type": "segmentation",
    "dataset": {
            "type":  "DOCKCDDataset",
            "img_g_path": "images",
            "img_n_path": "templates",
            "data_root": "D:\\DATASETS\\DOCK-CD",
            "train_pipeline": [{"type": "Resize", "scale": [448, 448]},
                               {"type": "Normalize"},
                               {"type": "DefaultFormatBundle"}
            ],
            "val_pipeline": [{"type": "Resize", "scale": [448, 448]},
                             {"type": "Normalize"},
                              {"type": "DefaultFormatBundle"}],
            "train_file": "labelme_train.txt",
            "val_file": "labelme_val.txt"
              },
    "dataloader":{
            "samples_per_gpu": 2,
            "workers_per_gpu": 2
    },
    "workflow": [["train", 2], ["val", 1]],
    "total_epochs": 100,
    "num_classes": 1,
    "log_iter": 10,
    "optimizer": "ADAMW",
    "learning_rate": 1e-3,
     "weight_decay": 1e-4,
    "lr_scheduler": {"type": "CosineAnnealingWarmRestarts",
                     "args": {"T_0": 5}
                      },
    "clip_gradients": {
                    "type": "value",
                    "enabled": true,
                    "clip_value": 1.0,
                    "norm_type": 2.0
    },
    "backbone_multiplier": 1.0,
    "input_channel": 3,
     "input_width": 448,
     "input_height": 448,
     "save_train_metrics_log": true,
     "save_train_predict_fn": true,
     "eval_period": 20,
  "save_val_pred": false,
        "ge_heat_map": {
    "enable": false,
    "mode": "score_cam"
  },
  "checkpoint_dir": "./outputs"

}
